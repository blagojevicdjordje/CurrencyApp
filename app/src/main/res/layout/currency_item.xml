<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_curren"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/cell_curren">

    <TextView
        android:id="@+id/title"
        style="@style/titleCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="16dp"
        android:gravity="top"
        android:lineSpacingExtra="5sp"
        android:text="@string/title_currency"
        android:textAppearance="@style/title"
        android:textStyle="bold"
        android:translationY="-2.62sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="40dp"
        android:gravity="top"
        android:lineSpacingExtra="4sp"
        android:text="@string/description"
        android:textAppearance="@style/description"
        android:translationY="-1.8sp" />


    <EditText
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="21dp"
        android:layout_marginRight="16dp"
        android:gravity="right|top"
        android:inputType="numberDecimal"
        android:lineSpacingExtra="5sp"
        android:text="@string/amount"
        android:textAppearance="@style/amount"
        android:translationY="-2.28sp" />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/img_country_flag">

    </ImageView>

</RelativeLayout>